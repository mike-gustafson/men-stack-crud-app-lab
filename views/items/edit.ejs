<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <%- include('../partials/head') %>
    <title><%= title %></title>
</head>
<body>
<%- include('../partials/nav') %>

<div class="container">
    <div class="center-align" style="margin-top: 40px;">
        <form action="/items/<%= item.id %>?_method=PUT" method="POST">
            <div class="input-field">
                <input type="text" name="name" id="name" value="<%= item.name %>">
                <label for="name">Item Name</label>
            </div>
            <div class="input-field">
                <input type="number" name="quantity" id="quantity" value="<%= item.quantity %>">
                <label for="quantity">Quantity</label>
            </div>
            <div class="input-field">
                <input type="text" name="dietaryAccomodations" id="dietaryAccomodations" value="<%= item.dietaryAccomodations %>">
                <label for="dietaryAccomodations">Dietary Accomodations</label>
            </div>  
            <div class="input-field">
                <input type="text" name="category" id="category" value="<%= item.category %>">
                <label for="category">Category</label>
            </div>
            <div class="input-field">
                <input type="text" name="person" id="person" value="<%= item.person %>">
                <label for="person">Person bringing dish</label>
            <div class="center-align">
                <button class="btn blue darken-2">Update Item</button>
                <a href="/items" class="btn blue darken-2">View Items</a>
                <button class="btn red darken-2" formaction="/items/<%= item.id %>?_method=DELETE">Delete Item</button>
            </div>
        </form>
    </div>
    </div>
    
</body>
</html>